@using WebApp1.DataAccess;
@model List<Hrdina>

@{
    ViewData["Title"] = "Dračí doupě";
}

<h1>Hrdinové</h1>
<br />
<a class="btn btn-primary table-striped-columns" asp-controller="Drd" asp-action="New">
    New
</a>
<table class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <th align="center">
                Jméno
            </th>
            <th colspan="3" align="center">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Hrdina hrdina in Model)
        {
            <tr>
                <td>
                    @hrdina.Name
                </td>
                <td>
                    <a class="btn btn-primary table-striped-columns" asp-controller="Drd" asp-action="Play" asp-route-id="@hrdina.ID">
                        Hrát
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary table-striped-columns" asp-controller="Drd" asp-action="Edit" asp-route-id="@hrdina.ID">
                        Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary table-striped-columns" asp-controller="Drd" asp-action="Delete" asp-route-id="@hrdina.ID">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<form asp-action="Postavy" asp-controller="DrD">
    Počet:
    <input type="number" name="Count" />
    Sudba:
    <input type="number" name="Sudba" />
    Ohrožení:
    <input type="number" name="Ohrozeni" />
    <br />
    <button type="submit">Vytvořit</button>
</form>

